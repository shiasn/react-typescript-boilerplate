{
  "compilerOptions": {
    "strict": true,
    "outDir": "./dist/",
    "module": "esnext",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "es5",
      "es2015",
      "es2016"
    ],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "noUnusedLocals": true,
    "removeComments": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  // "exclude": ["dist", "build", "node_modules"]
  "include": [
    "./types",
    "./src/**/*",
    "./node_modules/@types"
  ]
}