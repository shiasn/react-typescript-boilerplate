{
  "name": "react-typescript-boilerplate",
  "version": "1.0.0",
  "description": "A boilerplate with React, redux and TypeScript",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=development DATA_SOURCE=SERVER webpack-dev-server --progress --colors --config ./build/webpack.config.dev.js",
    "start:mock": "NODE_ENV=development DATA_SOURCE=mock webpack-dev-server --progress --colors --config ./build/webpack.config.dev.js",
    "dll": "webpack -p --config ./build/webpack.config.dll.js --progress --profile --colors",
    "build": "npm run clean && DATA_SOURCE=SERVER webpack -p --config ./build/webpack.config.prod.js --progress --colors",
    "tslint": "tslint ./src/**/*.{ts,tsx} --force",
    "tslint:fix": "tslint ./src**/*.{ts,tsx} --fix",
    "stylelint": "stylelint src/**/*.{css,less}",
    "stylelint:fix": "stylelint src/**/*.{css.less} --fix",
    "lint": "run-p tslint stylelint",
    "lint:fix": "run-p tslint:fix stylelint:fix",
    "commit": "git-cz",
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rm -rf dist"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "node scripts/verify-commit-msg.js"
    }
  },
  "lint-staged": {
    "src/**/*.{css,less}": [
      "npm run stylelint:fix",
      "git add"
    ],
    "src/**/*.{ts,tsx}": [
      "npm run tslint:fix",
      "prettier --parser typescript --write",
      "git add"
    ]
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/react": "16.4.14",
    "@types/react-dom": "16.0.8",
    "@types/react-redux": "6.0.9",
    "@types/react-router": "4.0.31",
    "@types/react-router-config": "1.0.9",
    "@types/react-router-dom": "4.3.1",
    "@types/react-router-redux": "5.0.16",
    "@types/redux-actions": "2.3.0",
    "@types/redux-saga": "0.10.5",
    "@types/seamless-immutable": "7.1.2",
    "axios": "0.18.0",
    "babel-polyfill": "6.26.0",
    "chalk": "2.4.1",
    "commitizen": "3.0.1",
    "copy-webpack-plugin": "4.5.2",
    "css-loader": "1.0.0",
    "cz-conventional-changelog": "2.1.0",
    "cz-customizable": "5.2.0",
    "file-loader": "2.0.0",
    "fork-ts-checker-webpack-plugin": "0.4.9",
    "happypack": "5.0.0",
    "hash-sum": "1.0.2",
    "html-webpack-include-assets-plugin": "1.0.5",
    "html-webpack-plugin": "3.2.0",
    "husky": "1.1.0",
    "less": "3.8.1",
    "less-loader": "4.1.0",
    "lint-staged": "7.3.0",
    "mini-css-extract-plugin": "0.4.3",
    "mockjs": "1.0.1-beta3",
    "npm-run-all": "4.1.3",
    "optimize-css-assets-webpack-plugin": "5.0.1",
    "postcss-browser-reporter": "0.5.0",
    "postcss-import": "12.0.0",
    "postcss-loader": "3.0.0",
    "postcss-preset-env": "6.0.8",
    "postcss-reporter": "6.0.0",
    "postcss-url": "8.0.0",
    "prettier": "1.14.3",
    "react": "16.5.2",
    "react-dom": "16.5.2",
    "react-hot-loader": "4.3.11",
    "react-redux": "5.0.7",
    "react-router": "4.3.1",
    "react-router-config": "4.4.0-beta.1",
    "react-router-dom": "4.3.1",
    "react-router-redux": "4.0.8",
    "redux-devtools-extension": "2.13.5",
    "script-ext-html-webpack-plugin": "2.0.1",
    "style-loader": "0.23.0",
    "stylelint": "9.6.0",
    "stylelint-config-recess-order": "2.0.0",
    "stylelint-config-standard": "18.2.0",
    "stylelint-order": "1.0.0",
    "ts-import-plugin": "1.5.5",
    "ts-loader": "5.2.1",
    "tslint": "5.11.0",
    "tslint-config-prettier": "1.15.0",
    "tslint-loader": "3.6.0",
    "typescript": "3.1.1",
    "url-loader": "1.1.1",
    "webpack": "4.20.2",
    "webpack-bundle-analyzer": "3.0.2",
    "webpack-cli": "3.1.2",
    "webpack-dev-server": "3.1.9",
    "webpack-merge": "4.1.4",
    "webpack-parallel-uglify-plugin": "1.1.0"
  },
  "dependencies": {
    "redux": "4.0.0",
    "redux-actions": "2.6.1",
    "redux-saga": "0.16.0",
    "seamless-immutable": "7.1.4"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  }
}
